= link_to "Mycoachpractice", root_path, class: 'brand'
%ul.nav.pull-right
  - if user_signed_in?
    %li
      %a{ href: '#', rel: 'tooltip', title: 'Messages' }
        %i.icon-envelope.icon-white
    %li
      %a{ href: '#', rel: 'tooltip', title: 'Alerts' }
        %i.icon-flag.icon-white
    %li.divider-vertical
    %li.dropdown
      %a{ href: '#', data: { toggle: "dropdown" } }
        %i.icon-user.icon-white
        = current_user.full_name
        %span.caret
      %ul.dropdown-menu{ role: 'menu' }
        %li= link_to 'View/edit account', edit_user_registration_path, tabindex: '-1'
        %li= link_to 'Plans and upgrade', '#', tabindex: '-1'
        %li= link_to 'Help and support', '#', tabindex: '-1'
        %li.divider
        %li= link_to 'Logout', destroy_user_session_path, method: 'delete', tabindex: '-1'
  - else
    %li= link_to('Tour', '#')
    %li= link_to('Pricing', '#')
    %li.divider-vertical
    %li= link_to('Login', new_user_session_path)
    %li= link_to('Sign up', new_user_registration_path)
