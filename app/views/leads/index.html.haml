.row
  .span12
    = render "users/navbar"
    .page-header
      %h1 Leads

    .span6.offset3
      - if @leads.any?
        %table.table.table-hover
          %thead
            %tr
              %th Coachee Presenting Issue
              %th Rfp Id
              %th

          %tbody
            - @leads.each do |lead|
              %tr
                %td= lead.coachee_presenting_issue
                %td= lead.rfp_id
                %td= link_to "View lead details", lead_path(lead)
