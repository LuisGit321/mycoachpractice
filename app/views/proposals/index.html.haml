.row
  .span12
    = render "users/navbar"
    .page-header
      %h1 My proposals

    .span6
      - if current_user.proposals.any?
        %table.table.table-hover
          %thead
            %tr
              %th Created
              %th For
              %th Download
          %tbody
            - current_user.proposals.each do |proposal|
              %tr
                %td= proposal.created_at
                %td
                %td= link_to "pdf", proposal_path(proposal, params.merge(format: :pdf))
    .span3.pull-right
      = link_to "New proposal", new_proposal_path, class: "btn btn-success pull-right"
